<%- include('../partials/header') %>
<main class="main" id="main">
    <!-- <link rel="stylesheet" type="css" href="../../public/css/style.css"> -->
    <div class="container">
        <div class="row">
            <div class="col">
                <% if (prev != null) {%>
                    <a href="?page=<%= prev %>">prev</a>
                    
                <% } %>
                <% if (next != null) { %>   
                     <a href="?page=<%= next %>">next</a>
               <% } %> 
                
            </div>
    </div>
    <section class="section" id="section">
        <div class="row row-cols-1 row-cols-md-3 gd-4">
         <% data.forEach(program => { %>
             <div class="col" id="div">
                 <div class="card h-100">
                     <div class="card-body">
                         <h2 class="card-title program-name">
                             <%= program.title %>
                         </h2>
                         <img src="/images/<%= program.img %>" alt="image of <%= program.title %>">
                         <ul>
                             <li>Description: <%= program.program_description %></li>
                             <li>Runtime: <%= program.runtime %></li>
                             <li>Format: <%= program.format %></li>
                             <li>General Rating: <%= program.rating %></li>
                             <li>Year Released: <%= program.yr_released %></li>
                             <li>Program Rating: <%= program.program_rating %></li>
                             <a class="nav-link top-nav2" href="/actorsInPrograms/<%= program.program_id %>">Actors</a>
                         </ul>
                     </div>
                 </div>
             </div>
     
         <% }) %>
        </div>
    </section>
    
</main>
<%- include('../partials/footer') %>