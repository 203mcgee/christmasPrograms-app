<%- include('../partials/header') %>
<main class="main" id="main">
    <link rel="stylesheet" type="css" href="../../public/css/style.css">
    <div class="container">
        <div class="row">
            <div class="col">
                <% if (prev != null) {%>
                    <a href="?page=<%= prev %>">&lt;prev</a>
                    
                <% } %>
                <% if (next != null) { %>   
                     <a href="?page=<%= next %>">next&gt;</a>
               <% } %> 
                
            </div>
    </div>
    <section class="section" id="section">
        <div class="row row-cols-1 row-cols-md-3 gd-4 director-name">
         <% data.forEach(director => { %>
             <div class="col" id="div">
                 <div class="card h-100">
                     <div class="card-body">
                         <h2 class="card-title">
                             <%= director.fName %> <%= director.lName %>
                         </h2>
                     </div>
                 </div>
             </div>
     
         <% }) %>
        </div>
    </section>
    <div class="container">
        <div class="col">
            <li><a href="/sortingDirectors/fName">Sort by First Name</a></li>
            <li><a href="/sortingDirectors/lName">Sort by Last Name</a></li>
        </div>
    </div>
    
</main>
<%- include('../partials/footer') %>